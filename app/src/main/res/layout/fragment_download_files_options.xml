<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/blue_back_arrow_icon"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/task_1_hint"
        style="@style/topBarHeaderBlue"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="@+id/backButton" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/watch_history"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <TextView
        android:id="@+id/tv_chosen_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/_1_1_442kb"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history" />

    <ImageView
        android:id="@+id/iv_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/blue_box_sign"
        android:src="@drawable/image_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chosen_quantity" />

    <TextView
        android:id="@+id/tv_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/box"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_box"
        app:layout_constraintStart_toEndOf="@+id/iv_box"
        app:layout_constraintTop_toTopOf="@+id/iv_box" />

    <TextView
        android:id="@+id/tv_enter_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_box" />

    <ImageView
        android:id="@+id/iv_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/google_triangle_sign"
        android:src="@drawable/image_google_drive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_box" />

    <TextView
        android:id="@+id/tv_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/google_drive"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_google"
        app:layout_constraintStart_toEndOf="@+id/iv_google"
        app:layout_constraintTop_toTopOf="@+id/iv_google" />

    <TextView
        android:id="@+id/tv_enter_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_google" />

    <ImageView
        android:id="@+id/iv_drop_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/blue_box_sign"
        android:src="@drawable/image_drop_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_google" />

    <TextView
        android:id="@+id/tv_drop_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/dropbox"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_drop_box"
        app:layout_constraintStart_toEndOf="@+id/iv_drop_box"
        app:layout_constraintTop_toTopOf="@+id/iv_drop_box" />

    <TextView
        android:id="@+id/tv_enter_drop_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drop_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_drop_box" />

    <ImageView
        android:id="@+id/iv_ever_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/evernote_elephant_sign"
        android:src="@drawable/image_evernote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_drop_box" />

    <TextView
        android:id="@+id/tv_ever_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/evernote"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ever_note"
        app:layout_constraintStart_toEndOf="@+id/iv_ever_note"
        app:layout_constraintTop_toTopOf="@+id/iv_ever_note" />

    <TextView
        android:id="@+id/tv_enter_ever_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ever_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_ever_note" />

    <ImageView
        android:id="@+id/iv_one_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/one_drive_cloud_sign"
        android:src="@drawable/image_one_drive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ever_note" />

    <TextView
        android:id="@+id/tv_one_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/onedrive"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_one_drive"
        app:layout_constraintStart_toEndOf="@+id/iv_one_drive"
        app:layout_constraintTop_toTopOf="@+id/iv_one_drive" />

    <TextView
        android:id="@+id/tv_enter_one_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/iv_one_drive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_one_drive" />

    <ImageView
        android:id="@+id/iv_one_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/one_note_note_book_sign"
        android:src="@drawable/image_one_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_one_drive" />

    <TextView
        android:id="@+id/tv_one_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/onenote"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_one_note"
        app:layout_constraintStart_toEndOf="@+id/iv_one_note"
        app:layout_constraintTop_toTopOf="@+id/iv_one_note" />

    <TextView
        android:id="@+id/tv_enter_one_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/enter"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/iv_one_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_one_note" />
</androidx.constraintlayout.widget.ConstraintLayout>