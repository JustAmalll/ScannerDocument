<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_in_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="32dp">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/new_folder"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_add_to_desktop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/add_to_screen_schematic_image"
                android:src="@drawable/ic_add_to_desktop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header" />

            <TextView
                android:id="@+id/tv_add_to_desktop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/icon_to_desktop"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_add_to_desktop"
                app:layout_constraintStart_toEndOf="@+id/iv_add_to_desktop"
                app:layout_constraintTop_toTopOf="@+id/iv_add_to_desktop" />

            <ImageView
                android:id="@+id/iv_move_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/folder_with_an_arrow_forwarded_outside"
                android:src="@drawable/ic_move_file"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_add_to_desktop" />

            <TextView
                android:id="@+id/tv_move_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/move_to"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_move_to"
                app:layout_constraintStart_toEndOf="@+id/iv_move_to"
                app:layout_constraintTop_toTopOf="@+id/iv_move_to" />

            <ImageView
                android:id="@+id/iv_rename_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/pencil_image"
                android:src="@drawable/ic_pencil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_move_to" />

            <TextView
                android:id="@+id/tv_rename_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/rename"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_rename_image"
                app:layout_constraintStart_toEndOf="@+id/iv_rename_image"
                app:layout_constraintTop_toTopOf="@+id/iv_rename_image" />

                <ImageView
                    android:id="@+id/iv_delete_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/icon_remove"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_rename_image" />

            <TextView
                android:id="@+id/tv_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/delete"
                android:textColor="@color/red_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_delete_image"
                app:layout_constraintStart_toEndOf="@+id/iv_delete_image"
                app:layout_constraintTop_toTopOf="@id/iv_delete_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/f_blank"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/card_menu"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:padding="16dp"
        android:translationZ="10dp" />
</RelativeLayout>