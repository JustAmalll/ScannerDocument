<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.PostCardMakePhotoFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A2748"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="8dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_arrow_left_icon"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/white" />

            </LinearLayout>

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                app:tint="@color/white"
                android:contentDescription="@string/icon_share" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMoveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/image28"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        android:contentDescription="@string/postcard_image" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <View
                android:layout_width="26dp"
                android:background="@color/black"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#373EDF"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#EB1E1E"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="@color/white"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#8F5E13"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#C9730F"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#DABB19"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#FAFF16"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#83F25C"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#20AF13"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#6BF3E3"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

            <View
                android:layout_width="26dp"
                android:background="#283DFC"
                android:layout_marginStart="4dp"
                android:layout_height="26dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:paddingBottom="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eraser"
                    android:contentDescription="@string/eraser_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eraser"
                    android:textColor="@color/light_grey"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cropItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lasso"
                    android:contentDescription="@string/icon_lasso" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lasso"
                    android:textColor="@color/light_grey"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_palette"
                    android:contentDescription="@string/icon_palette" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/palette"
                    android:textColor="@color/light_grey"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refresh"
                    android:contentDescription="@string/refresh_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/light_grey"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>