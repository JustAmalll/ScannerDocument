        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ангола"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="+244"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>