<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_corners"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:text="@string/menu_2022"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">

        <TextView
            android:id="@+id/importImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/import_image"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_image_green" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/collage"
                android:textColor="@color/text_color"
                android:textSize="11sp"
                app:drawableTopCompat="@drawable/ic_image_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_premium"
                android:src="@drawable/ic_premium_small"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/convertToWordButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="Конвертировать\nWord"
                android:textColor="@color/text_color"
                android:textSize="11sp"
                app:drawableTopCompat="@drawable/ic_word_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_premium"
                android:paddingStart="0dp"
                android:paddingEnd="36dp"
                android:src="@drawable/ic_premium_small"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/counterfeitProtectionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="Защита от\nподделки"
                android:textColor="@color/text_color"
                android:textSize="11sp"
                app:drawableTopCompat="@drawable/ic_stamp_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_premium"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:src="@drawable/ic_premium_small"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/saveToGalleryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Сохранить в\n“Галерею”"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_image_green_import" />

        <TextView
            android:id="@+id/batchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Пакетная\nобработка"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_layer_group_green" />

    </LinearLayout>

    <TextView
        android:id="@+id/sendToPcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="Отправить на PC"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_computer" />

    <TextView
        android:id="@+id/renameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:drawablePadding="18dp"
        android:gravity="center|start"
        android:paddingVertical="2dp"
        android:text="@string/rename"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_pencil" />

    <TextView
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="Выбрать"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_check_box_circle" />

    <LinearLayout
        android:id="@+id/textRecognitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="Распознать текст"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_scan_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_premium_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/pdfParamsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="Параметры PDF"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_pdf_options" />

    <TextView
        android:id="@+id/sendToEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:layout_marginStart="18dp"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="Отправить на email"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_email"
        app:drawableTint="@color/light_grey" />

</LinearLayout>