<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="topBarBlueBackArrow" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:layout_marginStart">16sp</item>
    </style>

    <style name="topBarHeaderBlue" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="smallTextDetailsForSearchItems" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="smallImageDetailsForSearchItems" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="smallLinearDetailsForSearchItems" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="smallHeaderTextDetailsForSearchItems" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="innerCardSearchBar" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1.2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="mainCardSearchBar" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="tegTextStyle" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

</resources>